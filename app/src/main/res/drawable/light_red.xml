<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<!-- Bottom 2dp Shadow -->
<item>
    <shape
        android:shape="oval">

        <solid android:color="@color/icon_shadow_color"/>
        <size
            android:width="@dimen/home_icon_width"
            android:height="@dimen/home_icon_height"/>

    </shape>
</item>

<!-- White Top color -->
<item android:bottom="@dimen/bottom_shadow_size"
    android:right="@dimen/right_shadow_size">

    <shape android:shape="oval">

        <solid android:color="#ff8a65"/>
        <size
            android:width="@dimen/home_icon_width"
            android:height="@dimen/home_icon_height"/>

    </shape>

</item>


</layer-list>